---
import Button from '../components/Button.astro'
import GoogleMap from '../components/GoogleMap.astro'
import HerosectionSimple from '../components/HerosectionSimple.astro'
import Layout from '../layouts/Layout.astro'
---

<Layout title='About us'>
  <div class='main'>
    <HerosectionSimple src='/assets/about.webp' />
  </div>
  <div class='main'>
    <article
      ><h1>Contact</h1>
      <p>Because we'd love to hear from you.</p>
      <div class='columns'>
        <div class='vcard'
          ><div>
            <GoogleMap />
            <p><strong>Punkt Studio</strong></p><p
              >Address: Sofia, Bulgaria<br />
              str. William Gladstone 6</p
            >
            <p
              >Tel: <a href='tel:0899229759'>0899229759</a> / <a
                href='tel:0899667261'>0899667261</a
              ></p
            >
            <a href='mailto:info@punktstudio.bg'>info@punktstudio.bg</a></div
          ></div
        >

        <form action='' onsubmit='return false;'>
          <div class='columns'>
            <formgroup>
              <label for='name'>Name</label>
              <input type='text' id='name' value='' />
            </formgroup>
            <formgroup>
              <label for='surname'>Surname</label>
              <input type='text' id='surname' value='' />
            </formgroup>
          </div>
          <formgroup>
            <label for='email'>Email</label>
            <input type='email' id='email' value='' />
          </formgroup>
          <formgroup>
            <label for='subject'>Subject</label>
            <input type='text' id='subject' value='' />
          </formgroup>
          <formgroup>
            <label for='message'>Message</label>
            <textarea id='message'></textarea>
          </formgroup>
          <formgroup>
            <label for='tel'>Phone number</label>
            <input type='tel' id='tel' value='' />
          </formgroup>
          <Button href=''>Submit</Button>
        </form>
      </div>
    </article></div
  >
</Layout>
<style lang='scss'>
  article > p {
    max-width: 80ch;
    line-height: 1.8em;
  }

  form {
    display: flex;
    flex-flow: column;
    formgroup {
      margin: 1rem 0;
    }
    input,
    textarea {
      width: 100%;
      border: none;
      border-bottom: 1px solid var(--medium-dark);
      padding: 1em 1em;
      position: relative;
    }
    textarea {
      min-height: 3rem;
    }
    label {
      text-transform: uppercase;
      font-size: 0.7rem;
      letter-spacing: 0.2em;
      color: #999;
    }
  }

  .vcard {
    isolation: isolate;
    min-height: 300px;
    & > div {
      --filter: blur(2px);
      --transform: scale(0.98) translateY(3%);
      --bg-color: hsl(0 0% 0% / 0.2);
      --blur: blur(2px);
      display: flex;
      flex-flow: column;
      align-items: flex-start;
      justify-content: flex-start;
      gap: 1rem;
      height: 100%;
      box-shadow: 3px 3px 8px hsl(0 0% 0% / 0.1);
      position: relative;
      background-color: white;
      padding: 2rem;
      &:after {
        content: '';
        position: absolute;
        inset: 0;
        background-color: var(--bg-color);
        rotate: 2deg;
        transform: var(--transform);
        filter: var(--blur);
        transform-origin: center;
        z-index: -1;
      }
      &:before {
        content: '';
        position: absolute;
        inset: 0;
        background-color: var(--bg-color);
        rotate: -2deg;
        transform: var(--transform);
        filter: var(--blur);
        transform-origin: center;
        z-index: -1;
      }
      img {
        flex: 0 1 0px;
        max-height: 150px;
        aspect-ratio: 446 / 600;
        @media screen and (min-width: 756px) {
          max-height: 300px;
        }
      }
      & > .vcard__content {
        flex: 1 1 100%;
        display: flex;
        flex-flow: column;
        justify-content: space-around;
        height: 100%;
        padding: 1rem;
        quote {
          position: relative;
          color: rgb(113, 113, 113);
          line-height: 1.8em;
          //   span {
          //     background-color: #e3e3e3;
          //     padding: 0.3em;
          //   }
          &:after {
            content: '‚Äù';
            position: absolute;
            top: 0.3em;
            left: -0.2em;
            font-size: 8em;
            font-family: Georgia, 'Times New Roman', Times, serif;
            mix-blend-mode: darken;
            color: var(--header-bg);
            opacity: 0.7;
          }
        }
      }
    }
  }
</style>
