---
const {
  href,
  rarrow,
  larrow,
  class: classname,
  primary = true,
  secondary,
  size = 'large',
  id,
  tooltip,
  type = 'a',
} = Astro.props

const Tag = type === 'submit' ? 'button' : 'a'
---

<Tag
  data-tool-tip={tooltip}
  type={type === 'submit' ? 'submit' : undefined}
  href={href}
  id={id}
  class={`fluid-font ${classname} ${primary && !secondary && 'primary'} ${
    size === 'medium' && 'medium'
  } ${secondary && 'secondary'}`}
  data-href={href}
>
  {larrow && !secondary && <span class='arrow'>&larr;</span>}<span
    ><slot /></span
  >{rarrow && !secondary && <span class='arrow'>&rarr;</span>}
</Tag>
<style lang='scss'>
  a,
  button {
    text-decoration: none;
    border: none;
    display: flex;
    user-select: none;
    height: 3em;
    padding: 0.7em 1em;
    border-radius: 1.5em;

    & > span {
      width: 100%;
      text-align: center;
      white-space: nowrap;
    }
    .medium {
      border-radius: 1em;
      height: 2em;
      padding: 0.2em 1em;
    }
    &.primary {
      background-color: var(--cta-color);
      color: white;
    }
    &.secondary {
      background-color: transparent;
      color: var(--dark-text);
      font-style: italic;
    }

    & > span.arrow {
      font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI',
        Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue',
        sans-serif;
    }
  }
</style>
