---
const {
  href,
  rarrow,
  larrow,
  class: classname,
  primary = true,
  secondary,
  id,
} = Astro.props
---

<a
  href={href}
  id={id}
  class={`fluid-font ${classname} ${primary && !secondary && 'primary'} ${
    secondary && 'secondary'
  }`}
  data-href={href}
  >{larrow && !secondary && <span>&larr;</span>}<slot />{
    rarrow && !secondary && <span>&rarr;</span>
  }</a
>
<style lang='scss'>
  a {
    text-decoration: none;
    border-radius: 1em;
    height: 2em;
    border: none;
    padding: 0.2em 1em;
    display: flex;
    user-select: none;
    &.primary {
      background-color: var(--cta-color);
      color: white;
    }
    &.secondary {
      background-color: transparent;
      color: var(--dark-text);
      font-style: italic;
    }

    & > span {
      font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI',
        Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue',
        sans-serif;
    }
  }
</style>
