---
import Button from './Button.astro'
---

<div class='hero'>
  <img
    loading='lazy'
    role='presentation'
    sizes='(max-width: 600px) 1000px,
          1400px'
    srcset='
          /assets/interiordesign_hero_mobile.webp 1000w,
          /assets/interiordesign_hero.webp 1400w,
          '
    src='/assets/interiordesign_hero.webp'
  />
  <div class='hero__content'>
    <div
      ><slot /><div class='buttons'
        ><Button primary href='/our_process' rarrow='true' size='medium'>
          Tell me more
        </Button><Button
          tooltip='Skip the sales pitch, lets talk'
          secondary
          href='/contact'
          rarrow='true'
          size='medium'
        >
          Nah, I feel brave
        </Button></div
      ></div
    >
  </div>
</div>
<style lang='scss'>
  .hero {
    position: relative;
    height: 80vh;
    img {
      aspect-ratio: 1471 / 670;
      object-fit: cover;
      height: 80vh;
    }
    @media screen and (min-width: 756px) {
      height: unset;
      min-height: 400px;
      img {
        object-fit: none;
        height: unset;
      }
    }
  }
  .hero__content {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    backdrop-filter: blur(3px);
    background-color: hsl(240deg 7% 0% / 0.2);
    border-right: 1px solid hsl(0 0% 100% / 0.3);
    border-left: 1px solid hsl(0 0% 100% / 0.3);
    & > div {
      padding: 1rem;
      display: flex;
      flex-flow: column;
      align-items: center;
      justify-content: space-around;
      height: 100%;
      .buttons {
        display: flex;
        flex-flow: column;
        gap: 0.4em;
        transform: scale(1.5);
        @media screen and (min-width: 756px) {
          display: flex;
          transform: unset;
        }
      }
    }

    @media screen and (min-width: 756px) {
      left: 54%;
      right: 18%;
      background-color: hsl(240deg 7% 97% / 0.3);
    }
    @media screen and (min-width: 756px) and (max-width: 1000px) {
      left: 54%;
      right: 8%;
    }
  }
</style>
